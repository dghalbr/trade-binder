{
  "name": "trade-binder",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "firebase": "4.10.1",
    "mongodb": "3.0.3",
    "muicss": "^0.9.36",
    "neo4j-driver": "^1.5.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "^4.2.0",
    "react-router-dom": "4.2.2",
    "react-scripts": "1.1.1",
    "uuid": "^3.2.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:server": "node ./server/server",
    "build": "react-scripts build",
    "build:deploy": "npm run prettier & npm run build & firebase deploy",
    "test": "jest",
    "test:coverage": "jest --collectCoverage=true",
    "prettier": "prettier --config ./prettier.json --write \"./src/**/*.js\"",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "babel-jest": "^22.4.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.2",
    "prettier": "^1.10.2",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "16.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__tests__/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__tests__/__mocks__/fileMock.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/__mocks__/"
    ]
  }
}
